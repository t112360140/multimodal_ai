<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    tools:context=".MainActivity"
    android:keepScreenOn="true">

    <!-- 1. 背景：相機預覽 (佔滿全螢幕) -->
    <androidx.camera.view.PreviewView
        android:id="@+id/camera_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. 下半部：文字輸出區 (半透明黑色背景) -->
    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:background="#94FFFFFF"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!--        <TextView-->
        <!--            android:text="Model Output:"-->
        <!--            android:textColor="#00FF00"-->
        <!--            android:textStyle="bold"-->
        <!--            android:textSize="16sp"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginBottom="8dp"/>-->

        <ScrollView
            android:id="@+id/model_output_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/model_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="Waiting..."
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </ScrollView>
    </LinearLayout>

    <!-- 3. 左下角按鈕區 (浮在文字區上方) -->
    <!-- 您可以調整 margin_bottom 來決定要放在文字區裡面還是上面 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="250dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:contentDescription="Close Page"
            android:src="@drawable/close"
            app:backgroundTint="#F0F0F0"
            app:tint="@color/black" />
        <!-- 麥克風開關 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/mic_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:contentDescription="Mic Toggle"
            android:src="@drawable/start"
            app:backgroundTint="#F0F0F0"
            app:tint="@color/black" />

        <!-- 鏡頭開關 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/camera_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:contentDescription="Camera Toggle"
            android:src="@drawable/camera_off"
            app:backgroundTint="#F0F0F0"
            app:tint="@color/black" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>